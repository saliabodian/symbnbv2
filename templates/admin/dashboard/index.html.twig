{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row my-5">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-title">
                                    <h4>{{ stats.users }} Utilisateurs</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark mb-3 text-white text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-title">
                                    <h4>{{ stats.ads }} Annonces</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-title">
                                    <h4>{{ stats.bookings }} RÃ©servations</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-title">
                                    <h4>{{ stats.comments }} Avis</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">
                        <i class="fas fa-arrow-up"></i>
                        Les annonces populaires !
                    </h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td> {{ ad.title}} </td>
                                    <td>
                                        <img class="avatar avatar-micro" src="{{ ad.picture }}" alt="Avatar de {{ad.firstName}} {{ad.lastName}}">
                                        {{ad.firstName}} {{ad.lastName}}
                                    </td>
                                    <td>
                                        <span class="badge badge-dark">
                                            {{ad.note|number_format(1, ",", " ")}}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">
                        <i class="fas fa-arrow-down"></i>
                        Les pires annonces !
                    </h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                                <tr>
                                    <td> {{ ad.title}} </td>
                                    <td>
                                        <img class="avatar avatar-micro" src="{{ ad.picture }}" alt="Avatar de {{ad.firstName}} {{ad.lastName}}">
                                        {{ad.firstName}} {{ad.lastName}}
                                    </td>
                                    <td>
                                        <span class="badge badge-dark">
                                            {{ad.note|number_format(1, ",", " ")}}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
